# NewbornAI 2.0 Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# Claude Code SDK Configuration
# ====================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT_SECONDS=30
CLAUDE_MAX_RETRIES=3
CLAUDE_RATE_LIMIT_PER_MINUTE=60

# ====================
# Azure OpenAI Configuration (Optional)
# ====================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ====================
# Database Configuration
# ====================

# Neo4j (Temporal Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=newborn_ai

# Milvus (Vector Database)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USERNAME=
MILVUS_PASSWORD=
MILVUS_DATABASE=newborn_ai_vectors

# Qdrant (Alternative Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# PostgreSQL (Phenomenological Qualia Storage)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=newborn_ai_qualia
POSTGRES_USER=newborn_ai
POSTGRES_PASSWORD=your_postgres_password

# ====================
# Storage Configuration
# ====================
EXPERIENTIAL_MEMORY_PATH=./data/experiential_memory
LOGS_PATH=./logs
CACHE_PATH=./cache
BACKUP_PATH=./backups

# ====================
# System Configuration
# ====================

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
LOG_LEVEL=INFO

# Performance Settings
MAX_CONCURRENT_PROCESSES=8
MEMORY_LIMIT_MB=2048
CACHE_SIZE_MB=512
BACKUP_INTERVAL_HOURS=24

# Ï† Calculation Settings
PHI_CALCULATION_PRECISION=0.95
PHI_CACHE_TTL_SECONDS=300
PHI_PARALLEL_WORKERS=4

# Development Stage Settings
INITIAL_STAGE=stage_0_pre_conscious
STAGE_TRANSITION_SENSITIVITY=0.1
AUTO_STAGE_PROGRESSION=true

# ====================
# Monitoring & Observability
# ====================

# Prometheus Metrics
PROMETHEUS_PORT=8000
METRICS_ENABLED=true

# Logging
STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Tracing
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268

# ====================
# Security Configuration
# ====================

# API Security
API_SECRET_KEY=your_secret_key_here_generate_with_crypto
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Data Encryption
DATA_ENCRYPTION_KEY=your_encryption_key_32_chars_min
ENCRYPT_EXPERIENTIAL_MEMORY=true
ENCRYPT_BACKUPS=true

# ====================
# Testing Configuration
# ====================

# Test Database Settings
TEST_NEO4J_URI=bolt://localhost:7688
TEST_POSTGRES_DB=newborn_ai_test
TEST_MILVUS_PORT=19531

# Test Behavior
TEST_TIMEOUT_SECONDS=30
TEST_PARALLEL_WORKERS=2
MOCK_CLAUDE_SDK=true

# ====================
# Development Tools
# ====================

# Pre-commit Hooks
ENABLE_PRE_COMMIT=true
AUTO_FORMAT_CODE=true
RUN_TESTS_ON_COMMIT=true

# Documentation
AUTO_GENERATE_DOCS=false
DOCS_OUTPUT_PATH=./docs/generated

# ====================
# Experimental Features
# ====================

# Advanced Features (use with caution)
ENABLE_EXPERIMENTAL_FEATURES=false
ADVANCED_PHI_ALGORITHMS=false
QUANTUM_CONSCIOUSNESS_SIMULATION=false
EXTENDED_TEMPORAL_HORIZONS=false